<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.recurrent.spring_mybatis.mapper.RoleMapper">
  <!-- ロール名でロールを取得 -->
  <select id="findByName" resultType="com.recurrent.spring_mybatis.entity.Role">
    SELECT
      id
    , name
    FROM
      roles
    WHERE 
      name = #{name}
  </select>
</mapper>
